<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <com.gcssloop.widget.RCImageView
        app:round_corner="10dp"
        android:id="@+id/coverRiv"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_background"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        tools:text="视频聊天"
        android:id="@+id/typeTv"
        android:textSize="15sp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorWhite"
        android:layout_alignBottom="@+id/coverRiv"
        android:layout_alignStart="@+id/coverRiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="5.7万人"
        android:id="@+id/numTv"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignEnd="@+id/coverRiv"
        android:layout_alignBottom="@+id/coverRiv"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="5dp"
        android:layout_alignBottom="@+id/coverRiv"
        android:layout_toStartOf="@+id/numTv"
        android:src="@drawable/people_online_num"
        android:layout_width="25dp"
        android:layout_height="25dp"
        tools:ignore="ContentDescription" />

    <com.gcssloop.widget.RCImageView
        android:id="@+id/usrRiv"
        tools:src="@mipmap/ic_launcher_round"
        app:round_as_circle="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        tools:text="TESTV 官网"
        android:id="@+id/usrTv"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/usrRiv"
        android:layout_below="@+id/coverRiv"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="TESTV一起聊聊天吃吃面"
        android:id="@+id/titleTv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/usrRiv"
        android:layout_below="@+id/usrTv"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>